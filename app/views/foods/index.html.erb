<h1> Foods </h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>

  <% @foods.each do |food| %>
    <tr>
       <td><%= food.title %></td>
       <td><%= food.description %></td>
       <td><%= food.quantity %></td>
       <td><%= link_to 'Show', food %></td>
     </tr>
  <% end %>
</table>

<br>

